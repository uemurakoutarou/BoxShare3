
<header id="header" class="">
  <div class="text-center">
    <h2><%= link_to @user.nickname, user_path(@user) %></h2>
    <% if user_signed_in? %>
      <% unless current_user.id == @user.id %>
        <%= render "follow_form" %>
      <% end %>
    <% end %>
    <% if user_signed_in? && current_user.id == @user.id %>
      <div class="profile_edit">
        <%= link_to "プロフィールを編集", edit_user_path(current_user) %>
      </div>
    <% end %>

    <section>
      <%= render "users/stats" %>
    </section>
  </div>
</header><!-- /header -->
<hr>


<ul class="nav nav-tabs">
  <li class="nav-item"><a class="nav-link active" href="#sampleContentB" data-toggle="tab">採点した試合</a></li>
  <li class="nav-item"><a class="nav-link" href="#sampleContentC" data-toggle="tab">予想した試合</a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="sampleContentB">
    <% @judge.each do |fight| %>
      <%= render partial: "users/judge", locals:{fight:fight} %>
    <% end %>
  </div>

  <div class="tab-pane" id="sampleContentC">
    <% @forecasts.each do |forecast| %>
      <%= render partial: "users/forecast", locals:{forecast:forecast} %>
    <% end %>
  </div>
</div>