<div class="row form">
  <div class="col-lg-12">
    <%= form_for current_user do |f| %>
      <h2>登録情報</h2>
      <div class="form-group">
        <div class="col-lg-6">
          <%= f.text_field :nickname, placeholder: "ニックネーム", class: "form-control" %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <%= f.submit "送信", class: "btn btn-primary col-xs-12" %>
      </div>
    <% end %>
  </div>
</div>