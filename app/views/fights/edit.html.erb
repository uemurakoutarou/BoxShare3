<div class="row form">
  <div class="col-lg-12">
    <%= form_for(@fight) do |f| %>
      <%= f.file_field :image, placeholder: "画像", class: "form-control floating-label" %>
      <%= f.date_field :date, class: "form-control floating-label"%>
      <%= f.text_field :place, placeholder: "場所・会場", class: "form-control" %>
      <div class="form_group">
        <div class="col_xs_6">
          <%= f.text_field :player_A, placeholder: "選手名A", class: "form-control floating-label" %>
        </div>
        <div class="col_xs_6">
          <%= f.text_field :player_B, placeholder: "選手名B", class: "form-control floating-label" %>
        </div>
      </div>
      <%= f.select :all_round, ["4", "6", "8", "10", "12"] %>
      <%= f.text_area :detail, placeholder: "詳細", style: 'width: 100%;height: 300px;', class: "form-control" %>
      <%= f.submit "試合投稿", class: "btn btn-warning col-xs-12" %>
    </div>
    <% end %>
  </div>
</div>