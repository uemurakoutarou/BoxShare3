<div class="row form">
  <div class="col-lg-12">
    <%= form_for(@fight) do |f| %>
      <div class="form_group">
        <%= f.label "選手" %>
        <div class="form_inline">
          <%= f.text_field :player_A, placeholder: "選手名A", class: "form-control" %>
        </div>
        <div class="form_inline">
          <%= f.text_field :player_B, placeholder: "選手名B", class: "form-control" %>
        </div>
      </div>
      <div class="form_group">
        <%= f.label "日程" %>
        <%= f.date_field :date, class: "form-control form_inline"%>
      </div>
      <div class="form_group">
        <%= f.label "場所" %>
        <%= f.text_field :place, placeholder: "場所・会場", class: "form-control form_inline" %>
      </div>
      <%= f.label "ラウンド数" %>
      <%= f.select :all_round, ["4", "5", "6", "7", "8", "9", "10", "11", "12"], {}, {class: 'form-control form_inline'} %>
      <%= f.file_field :image, placeholder: "画像", class: "form-control form_inline" %>
      <%= f.text_area :detail, placeholder: "詳細", style: 'width: 100%;height: 300px;', class: "form-control" %>
      <%= f.submit "試合投稿", class: "btn btn-warning col-12" %>
    </div>
    <% end %>
  </div>
</div>