<div class="col-md-4" style="list-style:none;">
  <div class="card">
    <div class="card-body">
      <h3><%= link_to "#{fight.player_A} VS #{fight.player_B}", fight_path(fight) %></h3>
      <small>in <%= fight.place %></small><br>
      <div class="badge badge-secondary">
        採点数 <span class="badge badge-light"><%= fight.judges.select(:user_id).distinct.count %></span>
      </div>
      <div class="badge badge-secondary">
        予想数 <span class="badge badge-light"><%= fight.forecasts.count %></span>
      </div>
    </div>
  </div>
</div>